<div class="container mt-5">
  <div class="card bg-light shadow mx-auto" style="max-width: 400px;">
    <div class="card-body d-flex flex-column align-items-center">
      <h1 class="text-success">Login
        <hr>
      </h1>
      {{> message}}
      <form action="/users/login" method="post" class="my-2 py-2">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" name="email" id="email" placeholder="Your email">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" id="password" placeholder="請輸入密碼...">
        </div>
        <small class="form-text text-muted">Not a member?<a href="/users/register">Register</a></small>
        <button type="submit" id="loginButton"
          class="btn btn-outline-success btn-block rounded-pill mt-4">Login</button>
      </form>
    </div>
  </div>
</div>