<div class="container mt-5">
  <div class="card  mx-auto" style="max-width: 400px; border:none">
    <div class="card-body d-flex flex-column align-items-center">
      <h1 class="" style="color: #264653;">Login
        <hr>
      </h1>
      {{> message}}
      <form action="/users/login" method="post" class="my-2 py-2">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" name="email" id="email" placeholder="Your email">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" id="password" placeholder="Your password">
        </div>
        <small class="form-text text-muted">Not a member?<a href="/users/register"
            style="color: #264653;">Register</a></small>
        <button type="submit" id="loginButton" class="btn btn-block mt-4 myBtn"
          style="color: #264653; border: 1px solid #264653;">Login</button>
      </form>
    </div>
  </div>
</div>