<div class="container mt-5">
  <div class="card bg-light shadow mx-auto" style="max-width: 400px;">
    <div class="card-body d-flex flex-column align-items-center">
      <h1 class="text-success">Register
        <hr>
      </h1>
      {{> message}}
      <form action="/users/register" method="post">
        <small class="form-text text-muted mb-1"><span class="text-danger">*</span>Required</small>
        <div class="form-group">
          <label for="userName">Name<span class="text-danger">*</span></label>
          <input type="text" class="form-control" name="userName" id="userName" placeholder="Your name"
            value="{{userName}}">
        </div>
        <div class="form-group">
          <label for="email">Email<span class="text-danger">*</span></label>
          <input type="email" class="form-control" name="email" id="userAccount" placeholder="Your email"
            value="{{email}}">
        </div>
        <div class="form-group">
          <label for="password">Password<span class="text-danger">*</span></label>
          <input type="password" class="form-control" name="password" id="password" placeholder="Your passowrd"
            value="{{password}}">
        </div>
        <div class="form-group">
          <label for="confirmPassword">Confirm passowrd<span class="text-danger">*</span></label>
          <input type="password" class="form-control" name="confirmPassword" id="confirmPassword"
            placeholder="Your password" value="{{confirmPassword}}">
        </div>
        <small class="form-text text-muted">Already a member?<a href="/users/login">Login</a></small>
        <button type="submit" id="loginButton"
          class="btn btn-outline-success btn-block rounded-pill mt-4">Register</button>
      </form>
    </div>
  </div>
</div>